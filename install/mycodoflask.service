[Unit]
Description=Unicorn Daemon for Mycodo flask frontend (web UI)
After=network.target

[Service]
User=mycodo
Group=mycodo
WorkingDirectory=/var/www/mycodo/mycodo
ExecStart=/var/www/mycodo/env/bin/gunicorn --workers 1 --bind unix:/var/www/mycodo/mycodo/mycodoflask_socket.sock start_flask_ui:app

ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID


[Install]
WantedBy=multi-user.target
